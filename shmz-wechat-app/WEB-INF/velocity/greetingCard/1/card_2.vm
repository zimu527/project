<script src="js/bwrdfr-i.js"></script>
<script>
    var openId='$!{opId}';
    var aId='$!{aid}';
    var activityId='$!{activityId}';
    var cid=${cardInfo.id};
    var nickname='$!{cardInfo.nickname}';
    var headimgurl='$!{cardInfo.headimgurl}';
    var blessWords='$!{cardInfo.blessWords}';
    var role=${role};// 角色，1-自己的贺卡，2-他人的贺卡
